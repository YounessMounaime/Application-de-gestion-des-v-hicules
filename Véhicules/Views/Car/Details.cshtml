@model Car
<!-- Page Content -->
<div class="container">
    <div class="row">

        <div class="col-md-12">
            <br>
            <img class="img-fluid" src="@Model.CarImgUrl" alt="">
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3 class="my-3">Informations : </h3>
            <ul>
                <li><i class="fas fa-car"></i> Marque :  @Model.CarName</li>
                <li><i class="fas fa-steering-wheel"></i>Modèle :  @Model.CarModel</li>
                <li><i class="fas fa-calendar-alt"></i> Année : @Model.CarYear</li>
                <li><i class="fas fa-dollar-sign"></i> Prix : @Model.Price</li>
                <li><i class="fas fa-envelope"></i> Email : @Model.OwnerEmail</li>
                <li><i class="fas fa-globe"></i> WebSite : @Model.CarWebsite</li>

            </ul>
        </div>

    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

